<!DOCTYPE html>
<html>
<head>
  <title>Picbook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  
  <%= javascript_include_tag 'camera', 'camera.min', 'formvalidate' %>
  <%= javascript_include_tag 'jquery-1.8.1.min', 'jquery.easing.1.3', 'jquery.min' %>
  <%= javascript_include_tag 'jquery.mobile.customized.min', 'signin'%>
  
  <%= csrf_meta_tags %>
  
  <%= yield(:head) %> 
</head>
<body>
	<div id="header">
			<div id="header_block">
				<h1 id="logo">
				</h1>
				
				<% if  session[:user_id].nil? %>
				<div id="btn-block">
					<a class="btn-blue" href="http://localhost:3000">Home</a>
					<a class="btn-blue" href="http://localhost:3000/users">Users</a>
					<a class="btn-blue" href="http://localhost:3000/login">Sign In</a>
					<a class="btn-blue" href="http://localhost:3000/simplecov/index.html">Coverage</a>
					<a class="btn-blue" href="http://localhost:3000/picbook/reference">Ref</a>
				</div>
				<% else %>
				<div id="btn-block">
					
					<a class="btn-blue" href="http://localhost:3000">Home</a>
					<a class="btn-blue" href="http://localhost:3000/users">Users</a>
					<a class="btn-blue" href="http://localhost:3000/users/<%=session[:user_id]%>">Profile</a>
					<a class="btn-blue" href="http://localhost:3000/sessions/destroy">Log out</a>
					<a class="btn-blue" href="http://localhost:3000/pics/?layout=gallerythumbnail&user_id=<%= session[:user_id]%>">Gallery</a>
					<a class="btn-blue" href="http://localhost:3000/coverage">Coverage</a>
					<a class="btn-blue" href="http://localhost/Picbook/reference.html">Ref</a>
				</div>
				<% end%>
				
			</div>
			<div id="shadow" style="opacity: 1;">&nbsp;</div>		
	</div>
	
	<div id="yieldcontent">
	<%= yield %>
	</div>
	
	<div id="footer">
		<span class="copy">&copy;2012 Picbook Team All rights reserved.</span>
		
		<div id="footer-list">
		<ul>
			<li><a href="">Terms of Service</a></li>
			<li><a href="">Privacy Policy</a></li>
			<li><a href="">Support</a></li>
			<li><a href="">Contact</a></li>
			<li>&nbsp;</li>
			<li><a href="">Follow on Facebook</a></li>
		</ul>
		</div>
		</div>
	



</body>
</html>
