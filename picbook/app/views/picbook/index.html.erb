
<%= javascript_include_tag 'jquery.min' %>
<%= javascript_include_tag 'jquery.mobile.customized.min' %>
<%= javascript_include_tag 'jquery.easing.1.3' %>
<%= javascript_include_tag 'camera.min' %>
    <script>
   
	jQuery(function(){
			
			jQuery('#camera_wrap_1').camera({
				height: '400px',
				thumbnails: false,
			});

		});
		
		
	</script>
	
<div id="#contentindex">
				<div class="fluid_container">
			        <div class="camera_wrap camera_azure_skin" id="camera_wrap_1">
			            <div data-thumb="<%= asset_path 'slides/thumbs/bg1.jpg' %>" data-src="<%=asset_path 'slides/bg1.jpg' %>">
			            </div>
			            <div data-thumb="<%= asset_path 'slides/thumbs/bg5.jpeg' %>" data-src="<%=asset_path 'slides/bg5.jpeg'%>">
			            </div>
			            <div data-thumb="<%= asset_path 'slides/thumbs/bg3.jpeg' %>" data-src="<%=asset_path 'slides/bg3.jpeg'%>">
			            </div>
			            
			            <div data-thumb="<%= asset_path 'slides/thumbs/bg4.jpeg' %>" data-src="<%=asset_path 'slides/bg4.jpeg'%>">
			            </div>
			        </div><!-- #camera_wrap_1 -->
			 </div>
			 <div class="promobox">
						<h1>Share the life <br> with the world</h1>
									<h3><a href="http://localhost:3000/users/new">Register now</a></h3>
			</div>
			
						<div id="hot_image_container">
				<h3>Hot Photos</h3>
				<% @pics.each do |pic| %>
				<% @friend = User.find(pic.user_id)%>
				<div class="hot_image">
				<a href=""><%= image_tag pic.photo.url, :class => "thumb" %>
				</a>
				<p class="hot_user"><%= image_tag (@friend.avatar.url) %><a href=""> @<%= @friend.firstName+" "+@friend.lastName%></a></p>
				</div>
<% end %>	
				</div>	
			

								<div id="latest_image_container">
				<h3>Latest Photos</h3>
				
				<% @pics.each do |pic| %>
				<% @friend = User.find(pic.user_id)%>
				<div class="latest_image">
			      <div class="left">
			        <%= image_tag (@friend.avatar.url) %>
			      </div>
			      <div class="middle">
			        <p><a href=""><%= @friend.firstName+" "+@friend.lastName%></a></p>
			        <p><%= pic.title%></p>
			      </div>
			      <div class="right">
			        <a href="">
			          <%= image_tag pic.photo.url%>
			        </a>
			      </div>
			    </div>
			    <% end %>	
								</div>
	</div>

